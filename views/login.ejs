<!DOCTYPE html>
<html>
<head>
    <title>Login Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <!-- Other login form fields and content can be added here -->
        <h1>User Login</h1>
        <div class="container mx-auto py-12">
            <form method="POST" action="/auth/login" class="max-w-md mx-auto bg-white p-4 rounded shadow">

              <div class="mb-4">
                <label for="username" class="block text-gray-700">Username:</label>
                <input type="text" class="form-input w-full" id="username" name="username" placeholder="Enter username">
              </div>
              <div class="mb-4">
                <label for="password" class="block text-gray-700">Password:</label>
                <input type="password" class="form-input w-full" id="password" name="password" placeholder="Password">
              </div>
              <button type="submit" class="btn btn-primary">Register</button>
            </form>
          </div>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
